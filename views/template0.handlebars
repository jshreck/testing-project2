{{#section 'css'}}
<link rel="stylesheet" type="text/css" href="/css/template0.css"> 
{{/section}}


<div class="container">
    <div class="row textcenter">
        <div class="col-sm-8 offset-sm-2">
            <div class="jumbotron">
                <div class="image">
                    <img src="/images/bloggin-logo.png" class="img-fluid">
                </div>
                <hr class="my-4">
                <h1>{{username}}</h1>
            </div>
            {{!-- BLOG POST --}} {{#each blogPost}}
            <div class="row">
                <div class="col-sm-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">{{title}}</h3>
                        </div>
                        <div class="panel-body">
                            {{body}}
                        </div>
                    </div>
                </div>
            </div>
            <br>
            {{/each}}
        </div>
    </div>